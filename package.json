{
  "name": "integrify",
  "version": "4.0.1",
  "description": "Enforce referential integrity in Firestore using Cloud Functions",
  "keywords": [
    "firebase",
    "firestore",
    "referential",
    "integrity",
    "functions"
  ],
  "homepage": "https://github.com/anishkny/integrify",
  "repository": {
    "type": "git",
    "url": "https://github.com/anishkny/integrify.git"
  },
  "license": "MIT",
  "author": {
    "name": "Anish Karandikar",
    "url": "https://github.com/anishkny"
  },
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "clean": "rm -rf lib/",
    "format": "prettier --check src/ test/",
    "lint": "npm run format && eslint src/ --max-warnings 0",
    "build": "npm run clean && npm run lint && tsc",
    "test": "npm run build && ./test/run-tests.sh",
    "prepublishOnly": "npm run build",
    "release": "./release.sh"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.0",
    "@commitlint/config-conventional": "^12.0.0",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "chai": "^4.2.0",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "firebase-admin": "^9.4.1",
    "firebase-functions": "^3.11.0",
    "firebase-tools": "^9.0.0",
    "husky": "^5.0.9",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "prettier": "^2.2.0",
    "standard-version": "^9.0.0",
    "typescript": "^4.1.2"
  },
  "peerDependencies": {
    "firebase-admin": "^9.4.1",
    "firebase-functions": "^3.11.0"
  },
  "optionalDependencies": {
    "coveralls": "^3.1.0"
  },
  "dependencies": {
    "caller-path": "^3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build",
      "commit-msg": "commitlint --verbose --env HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "scope-case": [
        1,
        "always",
        "lower-case"
      ],
      "subject-case": [
        2,
        "always",
        "sentence-case"
      ]
    }
  },
  "standard-version": {
    "types": [
      {
        "type": "feat",
        "section": "Features"
      },
      {
        "type": "fix",
        "section": "Bug Fixes"
      },
      {
        "type": "chore",
        "section": "Chores"
      },
      {
        "type": "docs",
        "section": "Docs"
      },
      {
        "type": "style",
        "section": "Style"
      },
      {
        "type": "refactor",
        "section": "Refactor"
      },
      {
        "type": "perf",
        "section": "Performance"
      },
      {
        "type": "test",
        "section": "Tests"
      }
    ]
  }
}
